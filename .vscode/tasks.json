{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group":"build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "make server",
			"type": "cargo",
			"command": "build",
			"options": {"cwd": "${workspaceFolder}/lsp/nls"},
			"args": [],
			"group": "build",
			"problemMatcher": [
				"$rustc"
			]
		}
	]
}
